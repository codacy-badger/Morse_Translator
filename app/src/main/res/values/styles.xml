<resources>

  <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="SplashTheme" parent="AppTheme">
    <item name="android:windowBackground">@drawable/splash_bg</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="AppTheme.Dark" parent="AppTheme">
    <item name="colorAccent">@color/colorAccentDark</item>
    <item name="primaryTextColor">@color/mat_green</item>
    <item name="buttonTextColor">@color/mat_green</item>
    <item name="backgroundColor">@color/mat_black</item>
    <item name="buttonBackgroundColor">@color/mat_black</item>
    <item name="editTextHintColor">@color/hintColorGreen</item>
    <item name="iconColor">@color/mat_green</item>
    <item name="themeToggleButtonColor">@color/white</item>
    <item name="editTextBorderColor">@color/white</item>
  </style>

  <style name="AppTheme.Light" parent="AppTheme">
    <item name="colorAccent">@color/colorAccentLight</item>
    <item name="primaryTextColor">@color/black</item>
    <item name="buttonTextColor">@color/mat_black</item>
    <item name="backgroundColor">@color/gray</item>
    <item name="buttonBackgroundColor">@color/mat_green</item>
    <item name="editTextHintColor">@color/hintColorGray</item>
    <item name="iconColor">@color/mat_black</item>
    <item name="themeToggleButtonColor">@color/mat_black</item>
    <item name="editTextBorderColor">@color/mat_black</item>
  </style>


</resources>
