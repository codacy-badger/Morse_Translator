<?xml version="1.0" encoding="utf-8"?>
<com.eco4ndly.morse_translater.about.AboutView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/gray"
      android:paddingTop="15dp"
      android:paddingStart="10dp"
      android:paddingEnd="10dp"
      android:paddingBottom="15dp"
      android:orientation="vertical"
      >

    <Space
        app:layout_constraintBottom_toTopOf="@id/tv_name_about"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/tv_name_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dev_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/mat_black"
        android:textSize="22sp"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:id="@+id/ll_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name_about"
        android:layout_marginTop="16dp"
        >
      <ImageView
          android:id="@+id/iv_link_about"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/ic_link_24dp"
          android:rotation="45"
          android:layout_weight="1"
          android:layout_marginStart="4dp"
          android:layout_marginEnd="4dp"
          />
      <ImageView
          android:id="@+id/iv_github_about"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/ic_github"
          android:layout_weight="1"
          android:layout_marginStart="4dp"
          android:layout_marginEnd="4dp"
          />
      <ImageView
          android:id="@+id/iv_linkedin_about"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/ic_icons8_linkedin"
          android:layout_weight="1"
          android:layout_marginStart="4dp"
          android:layout_marginEnd="4dp"
          />
      <ImageView
          android:id="@+id/iv_fb_about"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/ic_facebook"
          android:layout_weight="1"
          android:layout_marginStart="4dp"
          android:layout_marginEnd="4dp"
          />
    </LinearLayout>

    <Space
        app:layout_constraintTop_toBottomOf="@id/ll_button_container"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

  </LinearLayout>
</com.eco4ndly.morse_translater.about.AboutView>
